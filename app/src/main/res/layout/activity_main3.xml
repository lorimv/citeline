<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity3"
        android:id="@+id/app"
        android:orientation="vertical"
        android:weightSum="1">>

        <LinearLayout android:id="@+id/horizontal_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <LinearLayout android:id="@+id/linear"
                android:layout_width="665dp"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginTop="15dp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/button"
                    android:layout_width="595dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dip"
                    android:layout_marginTop="2dip"
                    android:text="Chapter 5 - Respiratory System Notes" />

                <EditText
                    android:id="@+id/textView"
                    android:layout_width="595dp"
                    android:layout_height="170dp"
                    android:layout_marginLeft="30dip"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="2dip"
                    android:background="@drawable/border"
                    android:gravity="top"
                    android:hint="Tap here to begin taking notes..."
                    android:maxLines="10"
                    android:minLines="1"
                    android:paddingLeft="5dip"
                    android:paddingTop="5dip" />
            </LinearLayout>
            <LinearLayout android:id="@+id/upload_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="50dp"
                    android:layout_height="0dp"
                    />
                <ImageView
                    android:id="@+id/imageView"
                    android:gravity="left"
                    android:layout_width="match_parent"
                    android:onClick="imageViewUploader"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/second_button"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/app2"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:weightSum="1">



        </LinearLayout>

        <LinearLayout
            android:id="@+id/appInline"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:weightSum="1">


        </LinearLayout>

        <LinearLayout
            android:id="@+id/app3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <Button
                android:id="@+id/clickbtn3"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="addNonIndentedSubject"
                android:text="Add Subsection +" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>