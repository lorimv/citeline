<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/firstLayoutFromUnindented"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:orientation="vertical"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="8dp"
    android:paddingRight="30dp"

    android:background="@drawable/border"
    android:layout_marginLeft="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/horizootalButtonLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <Button
            android:id="@+id/edutButtonIndentedOnce"
            android:layout_marginLeft="32dp"
            android:backgroundTint="#5A5A5A"
            android:onClick="editAaButtonSubsection"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            style="style/Widget.MaterialComponents.Button.Icon"
            android:drawableLeft="@android:drawable/ic_menu_edit" />
        <Button
            android:id="@+id/button6"
            android:layout_width="443dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="2dip"
            android:onClick="hideALayout2"
            android:text="Chapter 5 - Respiratory System Notes" />
        <Button
            android:id="@+id/deleteButton1"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/design_default_color_error"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:onClick="deleteOnceIndentedLayout"
            style="style/Widget.MaterialComponents.Button.Icon"
            android:drawableLeft="@android:drawable/ic_menu_delete" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/onceIndentedHideLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/horizootalButtonLayoutForImageView"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <EditText
                android:id="@+id/textView6"
                android:layout_width="595dp"
                android:layout_height="170dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_marginLeft="30dip"
                android:layout_marginTop="2dip"
                android:background="@drawable/border"
                android:gravity="top"
                android:hint="Tap here to begin taking notes..."
                android:maxLines="10"
                android:minLines="1"
                android:paddingLeft="5dip"
                android:paddingTop="5dip" />
            <View
                android:layout_width="50dp"
                android:layout_height="0dp"
                />
            <ImageView
                android:id="@+id/imageViewUnindentedCheck"
                android:gravity="left"
                android:layout_width="400dp"
                android:onClick="imageViewUploader"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/second_button"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/doubleIndented"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:weightSum="1">
        </LinearLayout>
        <Button
            android:id="@+id/addChapUnindented"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addIndentedSubject"
            android:text="Add Subsection +" />
    </LinearLayout>
</LinearLayout>